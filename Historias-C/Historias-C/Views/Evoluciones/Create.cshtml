@model Historias_C.Models.Evolucion

@{
    ViewData["Title"] = "Crear Evolucion";
}

<h1>Crear</h1>

<h4>Evolucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicoId" class="control-label"></label>
                <select asp-for="MedicoId" class ="form-control" asp-items="ViewBag.MedicoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAtencion" class="control-label"></label>
                <input asp-for="DescripcionAtencion" class="form-control" />
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FechaYHoraAlta" class="control-label"></label>
                <input asp-for="FechaYHoraAlta" class="form-control" />
                <span asp-validation-for="FechaYHoraAlta" class="text-danger"></span>
            </div>
            <input asp-for="FechaYHoraInicio" hidden />
            <input asp-for="EstadoAbierto" hidden />
            <div class="form-group">
                <label asp-for="EpisodioId" class="control-label"></label>
                <select asp-for="EpisodioId" class ="form-control" asp-items="ViewBag.EpisodioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
