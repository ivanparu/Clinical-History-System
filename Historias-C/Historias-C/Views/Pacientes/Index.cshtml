@model IEnumerable<Historias_C.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Índice</h1>
@if (User.IsInRole(Historias_C.Helpers.Configs.EmpleadoRolName))
{
    <p>
        <a asp-action="Create">Crear nuevo</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ObraSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ObraSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                    @if (User.IsInRole(Historias_C.Helpers.Configs.EmpleadoRolName))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    }
                    @if (User.IsInRole(Historias_C.Helpers.Configs.MedicoRolName))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
