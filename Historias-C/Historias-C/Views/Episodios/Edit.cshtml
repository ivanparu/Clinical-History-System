@model Historias_C.Models.Episodio

@{
    ViewData["Title"] = "Edit";
}

<h1>Cerrar episodio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" readonly />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" readonly />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <input asp-for="FechaYHoraInicio" hidden />
            <div class="form-group">
                <label asp-for="FechaYHoraAlta" class="control-label"></label>
                <input asp-for="FechaYHoraAlta" class="form-control" />
                <span asp-validation-for="FechaYHoraAlta" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="EpicrisisId" class="control-label"></label>
                <select asp-for="EpicrisisId" class="form-control" asp-items="ViewBag.EpicrisisId" disabled></select>
                <span asp-validation-for="EpicrisisId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="EmpleadoId" class="control-label"></label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId" readonly></select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="HistoriaClinicaId" class="control-label"></label>
                <select asp-for="HistoriaClinicaId" class="form-control" asp-items="ViewBag.HistoriaClinicaId" readonly></select>
                <span asp-validation-for="HistoriaClinicaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Pacientes" asp-action="Index">Volver a la lista.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
